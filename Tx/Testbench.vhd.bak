Library IEEE;
USE IEEE.STD_logic_1164.all;
entity demo is end demo;
architecture one of demo is
component Tx is 
port(data_in : IN std_logic_vector(7 downto 0);
     Tx : OUT std_logic;
     send: IN std_logic;
     clock_show: OUT std_logic;
     clk: IN std_logic);
end component;
signal data_in : std_logic_vector(7 downto 0);
signal Tx : std_logic;
signal send: std_logic;
signal clock_show: std_logic;
signal clk: std_logic := '0';
begin
dut : Tx port map (data_in,Tx,send,Clock_show,clk);
clk <= not clk after 104 us;
process begin
data_in <= "11111111";
send <= '1';
wait for 2000 us;
data_in <= "01000010";
wait for 10 us;
send <= '0';
wait for 100 us;
send <= '1';
wait for 1 ms;
wait;
end process;
end one;

